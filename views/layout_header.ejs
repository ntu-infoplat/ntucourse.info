    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/lumen/bootstrap.min.css" rel="stylesheet" media="screen">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="/css/page.css" rel="stylesheet" media="screen">
    <link href="/css/sweetalert.css" rel="stylesheet" type="text/css" />
    <link href="/css/introjs.min.css" rel="stylesheet" type="text/css">

    <script src="/js/sweetalert.min.js"></script>
    <script src="/js/intro.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    

    <script src="https://cdnjs.cloudflare.com/ajax/libs/vis/4.3.0/vis.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/vis/4.3.0/vis.min.css" rel="stylesheet" type="text/css" />


    <script>
      $(document).ready(function(){
        
        $('#right_bar div').hover(function(){
            var val = $(this).attr("value");
            $(this).width("auto");
            $(this).append("<span>"+val+"</span>");
          },function(){
            $(this).find("span").remove();
            $(this).width("");
            $(this).attr("width", "50px");
        });

        $(".btn-load").click(function(){
            var defalut = 
            "哪一學年度修課\n"+
            "ψ 授課教師 \n"+
            "λ 開課系所與授課對象 \n"+
            "δ 課程大概內容 \n"+
            "Ω 私心推薦指數(以五分計) \n"+
            "η 上課用書(影印講義或是指定教科書) \n"+
            "μ 上課方式(投影片、團體討論、老師教學風格) \n"+
            "σ 評分方式(給分甜嗎？是紮實分？) \n"+
            "ρ 考題型式、作業方式 \n"+
            "ω 其它(是否注重出席率？如果為外系選修，需先有什麼基礎較好嗎？老師個性？加簽習慣？嚴禁遲到等…) \n"+
            "Ψ 總結 \n";

            $('textarea[name="content"]').text(defalut);
        });

        $('#aboutus').click(function(){
            swal({
                title:'關於 InfoPlat',
                text:
                    '我們是一群具備不同專長的夥伴，<br>'+
                    '因為相信資訊、整合和開源的力量，<br>'+
                    '合作推出了一些校園服務。<br><br>'+
                    '現在，先蓋出了幾棟房子之後，<br>'+
                    '我們想邀請你，一起來打造更便利美好的社區。<br><br>'+
                    'InfoPlat, Into Your Campus Life.<br><br>'+
                    '<a target="_target" href="https://github.com/ntu-infoplat/ntucourse.info">檢視原始碼</a>',
                html: true
            });
        });

        //report
        $('#reportBtn').click(function(){
            var email = $('#reportEmail').val();
            var content = $('#reportContent').val();

            $.post("/report",{
                email: email,
                content: content
            },function(result){
                if(result=="OK"){
                    $('#reportCls').click();
                    swal("回報成功", "感謝你的回報^___^", "success")
                }else{
                    //err
                    swal("Q___Q", "回報失敗", "error");
                }

            });
        });

      });

    </script>